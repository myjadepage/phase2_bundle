<script>
    var API_KEY = localStorage.getItem('api_key');   
    var id = "<%= id %>";
    var bid ="<%= bid %>"
    var url = "properties/" + id + "/rooms";

    // 객실추가하기
    $('#btnAddRoom').on('click', function(){
        var name =$('input[name="newRoom"').val();
        $.ajax({
            url : endUrl(url),
            contentType: "application/json; charset=utf-8",
            method : "post",
            headers : headers(),
            data:JSON.stringify({
                name : name,
                building_id : bid
            })
        })
        .done(function(res){
            console.log(res);
            $('#newRoomDone').modal('show');  
        })
        .fail(function(){
            msg = request.status + "<br>" + request.responseText + "<br>" + error;
            console.log(msg); 
            alert("객실을 불러 올 수 없습니다.");  
        })
        .always(function(){ 
            setTimeout(function(){
                location.reload();
            },1500);
         })
    })

    //객실리스트
    $.ajax({
            url : endUrl(url),
            contentType: "application/json; charset=utf-8",
            method : "get",
            headers : headers(),
            data:{               
                building_id : bid
            }        
        })
        .done(function(res){
            console.log(res);            
            $('#cntRoom').text(res.total);
            if(res.total > 0){
            $('#noRoomList').hide(); 
            $('#roomList').show(); 
            var liHtml ="";
            res.items.forEach(function(item, i, array){  
                liHtml += '<li><div class="form-check border"><label class="form-check-label"><input class="form-check-input" type="checkbox" name="chkObjNm"><span class="form-check-sign"></span></label>';
                liHtml += '<span class="room_name">'+ item.name+'</span>';
                liHtml += '<button type="button" rel="tooltip" title="editRoom"  data-toggle="modal" data-target="#EditRoom" data-room_id ="' + item.id + '" class="btn btn-info btn-simple btn-link"><i class="icon edit"></i></button>';
                liHtml += '</div></li>';  
            });       
            $('.room_name_item').append(liHtml);
            
            }else if(res.total == 0){
                $('#noRoomList').show(); 
                $('#roomList').hide(); 
            }
        })
        .fail(function(){
            msg = request.status + "<br>" + request.responseText + "<br>" + error;
            console.log(msg); 
            alert("객실목록을 불러 올 수 없습니다.");  
        })


        //객실 삭제하기       
        function fn_delRow(chkObjNm) { 
            var temp =$("input[name='chkObjNm']:checked");
            if (temp){ 
                for(var i=temp.length-1; i>-1; i--){ 
                    temp.eq(i).closest("li").remove();      
                    var rid = temp.eq(i).closest("[data-room_id]");    
                    console.log(rid)         
            } 
           
            console.log(rid);
            if (confirm("삭제 하시겠습니까?")) {    
                $.ajax({
                            url : endUrl(url) + "/" + rid,
                            contentType: "application/json; charset=utf-8",
                            method : "delete",
                            headers : headers()                                        
                        })
                        .done(function(res){
                            console.log(res);
                            // $('#DelRoom').modal('show');                           
                            // $(this).parent('li').remove();
                        })
                        .fail(function(){
                            msg = request.status + "<br>" + request.responseText + "<br>" + error;
                            console.log(msg); 
                            alert("객실을 삭제할 수 없습니다.");  
                        })
                        .always(function(){ 
                            setTimeout(function(){
                                location.reload();
                            },1500);
                        })
            } 
         } else { 
            alert("선택된 데이터가 없습니다.");  
         }       
    }
</script>

