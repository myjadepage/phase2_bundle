                                                        <input class="form-control" name="name" type="text" placeholder="스텝 이름 입력">
                                                    </div>
                                                    <div class="col-md-12 pr-1 pl-1">
                                                        <!-- 국가번호 -->
                                                        <select class="form-control" id="CountryCode" name="country_code"></select>
