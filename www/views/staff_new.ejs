            <div class="content">
                <div class="">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card card-h2">
                                <div class="card-header">
                                    <h5 class="card-title">스텝 등록</h5>
                                </div>
                                <div class="card-body">
                                    <form>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="row form-group">
                                                    <div class="col-md-12 pr-1">
                                                        <label>스텝 권한 선택</label>
                                                        <select class="form-control" name="property_list"></select>
