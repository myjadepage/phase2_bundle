//commondoor 이름 읽기
function commonArray(){           
        var commonrooms = $("#readDoorList > tbody").find('tr').map(function(){      
            return $(this).find('.commonDoor').text();
            }).get();
        return commonrooms;
    }
//공용도어 tr 동적추가
function addDoorTr(doorname){
    var rowItem = '<tr><td scope="col"><div class="form-check"><label class="form-check-label"><input class="form-check-input" type="checkbox" name="chkObject" value=""><span class="form-check-sign"></span></label></div></td>';
    rowItem += '<td class="commonDoor">'+ doorname + '</td><td class="td-actions text-right">';
    rowItem += '<button type="button" rel="tooltip" title="수정하기" data-toggle="modal" data-doorname="'+ doorname+'" data-target="#EditName" name ="editName" class="btn btn-info btn-simple btn-link"><i class="fa fa-edit"></i></button></td></tr>';
    $('#newDoorList tbody').append(rowItem);
    $('#newDoorName').val(''); 
